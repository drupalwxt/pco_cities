use Drupal\Core\Form\FormStateInterface;
use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function challenge_submission_help($route_name, RouteMatchInterface $route_match)
{
  switch ($route_name) {
    // Main module help for the challenge_submission module.
    case 'help.page.challenge_submission':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('My Awesome Module') . '</p>';
      return $output;

    default:
  }
}

