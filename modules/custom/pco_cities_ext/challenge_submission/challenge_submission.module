/**
 * Implements hook_theme().
 */
function challenge_submission_theme()
{
  return [
    'challenge-submission' => [
      'variables' => [
        'whatever' => 'HUzzah',
        'form' => NULL,
        'challenge' => NULL,
      ],
      'render element' => 'form'
    ],
  ];
}

function challenge_submission_schema()
{
  $schema['challenge_submission'] = [
    'fields' => [
      'csid' => [
        'type' => 'serial',
        'not null' => TRUE
      ],
      'challenge' => [
        'type' => 'varchar',
        'length' => 255,
        'not null' => TRUE,
        'default' => ''
      ],
      'title' => [
        'type' => 'varchar',
        'length' => 255,
        'not null' => TRUE
      ],
      'summary' => [
        'type' => 'text'
      ],
      'primary_contact_name' => [
        'type' => 'varchar',
        'length' => 255,
        'not null' => TRUE
      ],
      'primary_contact_email' => [
        'type' => 'varchar',
        'length' => 255,
        'not null' => TRUE
      ],
      'fid' => [
        'type' => 'int',
        'not null' => TRUE,
        'default' => 0
      ],
      'link' => [
        'type' => 'varchar',
        'length' => 255,
        'not null' => FALSE
      ]
    ],
    'primary key' => ['csid']
  ];

  return $schema;
}